{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "runtime.version": "LuaJIT",
  "workspace": {
    "library": [
      "$VIMRUNTIME"
    ],
    "checkThirdParty": "Disable"
  },
  "format": {
    "externalTool": {
      "program": "stylua",
      "args": [
        "-",
        "--stdin-filepath",
        "${file}"
      ]
    }
  },
  "diagnostics": {
    "disable": [
      "undefined-global",
      "unnecessary-if"
    ]
  },
  "codeAction": {
    "insertSpace": true
  },
  "strict": {
    "typeCall": true,
    "arrayIndex": true
  },
  "format.enable": false
}
